@page "/dialog"

<TelerikButton OnClick="@( _ => DialogVisible = true )">Show Dialog</TelerikButton>

<TelerikDialog Visible="@DialogVisible"
               VisibleChanged="@VisibleChanged"
               @ref="@DialogRef"
               Width="600px"
               ShowCloseButton="true"
               CloseOnOverlayClick="true"
               ButtonsLayout="@DialogButtonsLayout.End">
    <DialogTitle>
        Title
    </DialogTitle>
    <DialogContent>
        <p>Text</p>
    </DialogContent>
    <DialogButtons>
        <TelerikButton OnClick="@( () => HandleButtonClick(true) )"
                       ThemeColor="@ThemeConstants.Button.ThemeColor.Success">Yes</TelerikButton>
        <TelerikButton OnClick="@( () => HandleButtonClick(false) )"
                       ThemeColor="@ThemeConstants.Button.ThemeColor.Error">No</TelerikButton>
    </DialogButtons>
</TelerikDialog>

@code {
    private bool DialogVisible { get; set; }

    private TelerikDialog DialogRef { get; set; } = null!;

    private void HandleButtonClick(bool result)
    {
        DialogVisible = false;
    }

    private void VisibleChanged(bool newVisible)
    {
        DialogVisible = newVisible;
    }
}
