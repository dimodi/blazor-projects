@page "/window"

<TelerikButton OnClick="@( () => WindowVisible = !WindowVisible )">Toggle Window</TelerikButton>

<label><TelerikCheckBox @bind-Value="@WindowModal" /> Use Modality</label>

<TelerikWindow @bind-Visible="@WindowVisible"
               Modal="@WindowModal">
    <WindowActions>
        <WindowAction Name="Minimize" />
        <WindowAction Name="Close" />
    </WindowActions>
    <WindowTitle>
        Window Title
    </WindowTitle>
    <WindowContent>
        Window Content
    </WindowContent>
</TelerikWindow>

@code {
    private bool WindowVisible { get; set; }

    private bool WindowModal { get; set; }
}
